<div class="container-fluid cropped_header">
  <%= image_tag('cropped_header.png', style: 'visibility: hidden; width: 100%; height: auto;') %>
</div>
<div class="page container">
  <div class="row">
    <div class="col-xs-12">

      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <% @faqs.each do |faq| %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading-<%= faq.id %>">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= faq.id %>" aria-expanded="true" aria-controls="collapse-<%= faq.id %>">
                  <%= faq.title %>
                </a>
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= faq.id %>" aria-expanded="true" aria-controls="collapse-<%= faq.id %>" class="pull-right">
                  <i class="fa fa-plus" aria-hidden="true"></i>
                </a>
              </h4>
            </div>
            <div id="collapse-<%= faq.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading-<%= faq.id %>">
              <div class="panel-body">
                <%= faq.body.html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>