<div class="container-fluid cropped_header">
	<%= image_tag('cropped_header.png', style: 'visibility: hidden; width: 100%; height: auto;') %>
</div>

<div class="page container">
	<div class="col-xs-12">
		<div class="row">
			<h3 class="text-center"><%= @page.name %></h3>
		</div>
		<div class="row">

			<p class="entry">
				<div class="thumbnail hidden-xs" style="display: inline; float: left; padding-right: 20px;">
					<%= image_tag @page.main_image.url(:thumb) %>
				</div>
			<%= @page.body.html_safe %></p>
		</div>
	</div>
</div>