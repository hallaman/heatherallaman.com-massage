<div class="container">
  <div class="row">
    <h1>Listing Testimonials</h1>

    <%= link_to 'New Testimonial', new_testimonial_path, class: 'btn btn-default' %>

    <table class="table">
      <thead>
        <tr>
          <th>Body</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @testimonials.each do |testimonial| %>
          <tr>
            <td><h5><%= testimonial.title %></h5>
            <%= testimonial.body.html_safe %></td>
            <td style="width: 100px; height: 100px; overflow: hidden;"><div class="thumbnail"><%= image_tag(testimonial.image.url(:thumb)) %></div></td>
            <td><%= testimonial.show %></td>
            <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
            <td><%= link_to 'Delete', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


